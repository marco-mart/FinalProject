
type Game {
    id: Int!
    title: String!
    esrbRating: String!
    description: String!
    price: Float!
    studio: String!
    quantity: Int!
}

type Query {

    findAllGames: [Game]
    findGameById(id: Int): Game
    findGamesByTitle(title: String): [Game]
    findGamesByEsrbRating(esrb: String): [Game]
    findGamesByStudio(studio: String): [Game]
}

